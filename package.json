{
  "name": "grocsplit-server",
  "version": "1.0.0",
  "description": "Household grocery bill splitter with Plaid integration",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently --names \"api,ui\" --prefix-colors \"cyan,magenta\" --kill-others-on-fail \"npm run dev:api\" \"npm run dev:ui\"",
    "dev:api": "nodemon server/index.js",
    "dev:ui": "cd client && npm run dev",
    "setup": "npm install && cd client && npm install",
    "check-plaid": "node scripts/check-plaid.js",
    "setup-db": "node db/migrate.js",
    "seed": "node db/seed.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "plaid": "^25.0.0",
    "sql.js": "^1.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "nodemon": "^3.1.0"
  }
}
